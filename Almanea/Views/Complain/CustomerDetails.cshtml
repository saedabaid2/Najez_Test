
@{  
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model Almanea.Models.vm_ComplainDetail


<div class="card-body p-0">
    <div class="row">
        <div class="col-lg-12 col-md-12 ml-4 mt-5">
            <div class="row">
                <div class="col-md-10">
                    <h4>@Translation.ComplainDetails</h4>
                    <a class="float-right" href="@Url.Action("Customer")/@ViewBag.OrderId"><h6>@Translation.BackToComplain</h6> </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.Status</label>
                        @Html.TextBoxFor(m => m.Status, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.ComplainCategory</label>
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.ComplainId</label>
                        @Html.TextBoxFor(m => m.ComplainId, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.InvoiceNo</label>
                        @Html.TextBoxFor(m => m.InvoiceNo, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.SubmissionDate</label>
                        @Html.TextBoxFor(m => m.SubmissioinDate, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">

                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.CloseDate</label>
                        @Html.TextBoxFor(m => m.CloseDate, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.Comments</label>
                        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", @style = "resize:none;", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="bmd-label-floating">@Translation.Response</label>
                        @Html.TextAreaFor(m => m.Feedback, new { @class = "form-control", @style = "resize:none;", @readonly = "readonly" })
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

